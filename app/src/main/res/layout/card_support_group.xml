<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/darkBlue"
    android:orientation="vertical">

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="80dp"
        android:background="@color/blue"
        android:foregroundGravity="right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            app:cardCornerRadius="100dp">

            <ImageView
                android:id="@+id/GroupJoinedIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="left"
                android:background="#00FFFFFF"
                android:clipToOutline="true"
                android:foregroundGravity="left"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_rightside" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/JoinedGroupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:text="SupportSphere"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/JoinedGroupDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:text="PeacefulPath: It's okay to feel this way. Youâ€™re not alone in this journey."
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

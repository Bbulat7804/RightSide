<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001A3E"
    tools:context=".fragment_stress_test">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/boxView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/box" />

                <TextView
                    android:id="@+id/testStress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="40dp"
                    android:text="Test Your Stress"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/descTest"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Knowing your current level of stress is the first step in taking control"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="33.4sp"
                    android:textStyle="bold" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/instr_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Simply answer the following 10 questions"
                    android:textColor="#FFFFFF"
                    android:textSize="18.7sp" />

                <TextView
                    android:id="@+id/q1c_TV2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="50dp"
                    android:layout_weight="1"
                    android:text="In the LAST MONTH, how often have you:"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="16.7sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/q1_TV"
                        android:layout_width="214dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="250dp"
                        android:text="Been upset because of something that happened unexpectedly?"
                        android:textAlignment="textEnd"
                        android:textColor="#FFFFFF"
                        android:textSize="16.7sp" />

                    <RadioGroup
                        android:layout_width="207dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp">

                        <RadioButton
                            android:id="@+id/never_q1"
                            android:layout_width="88dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center|top"
                            android:layout_marginStart="-50dp"
                            android:layout_marginTop="-10dp"
                            android:buttonTint="#FFFFFF"
                            android:text="Never"
                            android:textAlignment="textStart"
                            android:textColor="#FFFFFF"
                            android:textSize="16.7sp" />

                        <RadioButton
                            android:id="@+id/almostnever_TV1"
                            android:layout_gravity="center"
                            android:layout_marginStart="-25dp"
                            android:layout_marginTop="-20dp"
                            android:text="Almost Never"
                            android:textColor="#FFFFFF"
                            android:textSize="16.7sp" />

                        <RadioButton
                            android:id="@+id/sometimes_TV1"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center|top"
                            android:layout_marginStart="-33dp"
                            android:layout_marginTop="-20dp"
                            android:text="Sometimes"
                            android:textColor="#FFFFFF"
                            android:textSize="16.7sp" />

                        <RadioButton
                            android:id="@+id/fairlyoften_TV1"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_gravity="center|top"
                            android:layout_marginStart="-30dp"
                            android:layout_marginTop="-20dp"
                            android:text="Fairly Often"
                            android:textColor="#FFFFFF"
                            android:textSize="16.7sp" />

                        <RadioButton
                            android:id="@+id/often_TV1"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_gravity="center|top"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="-20dp"
                            android:text="Often"
                            android:textColor="#FFFFFF"
                            android:textSize="16.7sp" />

                    </RadioGroup>
                </LinearLayout>

                <TextView
                    android:id="@+id/q2c_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="-35dp"
                    android:text="In the LAST MONTH, how often have you:"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="16.7sp" />

                <TextView
                    android:id="@+id/q2_TV"
                    android:layout_width="214dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="280dp"
                    android:text="Felt that you were unable to control important things in your life?"
                    android:textAlignment="textEnd"
                    android:textColor="#FFFFFF"
                    android:textSize="16.7sp" />

                <TextView
                    android:id="@+id/q3c_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="150dp"
                    android:text="In the LAST MONTH, how often have you:"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="16.7sp" />

                <TextView
                    android:id="@+id/q3_TV"
                    android:layout_width="214dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="470dp"
                    android:text="How often have you felt nervous and stressed?"
                    android:textAlignment="textEnd"
                    android:textColor="#FFFFFF"
                    android:textSize="16.7sp" />

                <TextView
                    android:id="@+id/q4c_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="600dp"
                    android:text="In the LAST MONTH, how often have you:"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="16.7sp" />

                <TextView
                    android:id="@+id/q4_TV"
                    android:layout_width="214dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="660dp"
                    android:text="How often have you felt confident about your ability to handle
 your personal problems?"
                    android:textAlignment="textEnd"
                    android:textColor="#FFFFFF"
                    android:textSize="16.7sp" />

                <RadioGroup
                    android:layout_width="349dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="179dp">

                    <RadioButton
                        android:id="@+id/never_q2"
                        android:layout_width="88dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center|top"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="90dp"
                        android:buttonTint="#FFFFFF"
                        android:text="Never"
                        android:textAlignment="textStart"
                        android:textColor="#FFFFFF"
                        android:textSize="16.7sp" />

                    <RadioButton
                        android:id="@+id/almostnever_TV2"
                        android:layout_gravity="center"
                        android:layout_marginStart="84dp"
                        android:layout_marginTop="-20dp"
                        android:text="Almost Never"
                        android:textColor="#FFFFFF"
                        android:textSize="16.7sp" />

                    <RadioButton
                        android:id="@+id/sometimes_TV2"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginStart="76dp"
                        android:layout_marginTop="-20dp"
                        android:text="Sometimes"
                        android:textColor="#FFFFFF"
                        android:textSize="16.7sp" />

                    <RadioButton
                        android:id="@+id/fairlyoften_TV2"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="center|top"
                        android:layout_marginStart="76dp"
                        android:layout_marginTop="-20dp"
                        android:text="Fairly Often"
                        android:textColor="#FFFFFF"
                        android:textSize="16.7sp" />

                    <RadioButton
                        android:id="@+id/often_TV2"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="center|top"
                        android:layout_marginStart="54dp"
                        android:layout_marginTop="-20dp"
                        android:text="Often"
                        android:textColor="#FFFFFF"
                        android:textSize="16.7sp" />

                </RadioGroup>

                <RadioGroup
                    android:layout_width="349dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="0dp">

                    <RadioButton
                        android:id="@+id/never_q3"
                        android:layout_width="88dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center|top"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="460dp"
                        android:buttonTint="#FFFFFF"
                        android:text="Never"
                        android:textAlignment="textStart"
                        android:textColor="#FFFFFF"
                        android:textSize="16.7sp" />

                    <RadioButton
                        android:id="@+id/almostnever_TV3"
                        android:layout_gravity="center"
                        android:layout_marginStart="84dp"
                        android:layout_marginTop="-20dp"
                        android:text="Almost Never"
                        android:textColor="#FFFFFF"
                        android:textSize="16.7sp" />

                    <RadioButton
                        android:id="@+id/sometimes_TV3"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginStart="76dp"
                        android:layout_marginTop="-20dp"
                        android:text="Sometimes"
                        android:textColor="#FFFFFF"
                        android:textSize="16.7sp" />

                    <RadioButton
                        android:id="@+id/fairlyoften_TV3"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="center|top"
                        android:layout_marginStart="76dp"
                        android:layout_marginTop="-20dp"
                        android:text="Fairly Often"
                        android:textColor="#FFFFFF"
                        android:textSize="16.7sp" />

                    <RadioButton
                        android:id="@+id/often_TV3"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="center|top"
                        android:layout_marginStart="54dp"
                        android:layout_marginTop="-20dp"
                        android:text="Often"
                        android:textColor="#FFFFFF"
                        android:textSize="16.7sp" />

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
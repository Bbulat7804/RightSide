<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlue"
    android:backgroundTint="@color/darkBlue"
    tools:context=".UploadArticlePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/textView30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Create Group"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Group Icon"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/GroupIconButton"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/box_rounded_bordered_white"
            android:padding="20dp"
            android:src="@mipmap/ic_rightside" />

        <TextView
            android:id="@+id/grpname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Group Name"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/GroupNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/box_rounded_bordered_white"
            android:ems="10"
            android:gravity="top"
            android:inputType="text"
            android:padding="10dp"
            android:scrollbars="vertical"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/grpdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Group Description"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/GroupDescriptionInput"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/box_rounded_bordered_white"
            android:ems="10"
            android:gravity="top"
            android:inputType="text|textMultiLine"
            android:padding="10dp"
            android:scrollbars="vertical"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/CreateButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/roboto_bold"
            android:text="Create Group"
            android:textColor="@color/white" />

    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="800dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/darkBlue"
    tools:context=".ModifyMentalConsultation"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/titleMentalConsultationForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="MODIFY CONSULTATION"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="30dp" />

                <Spinner
                    android:id="@+id/MentalConsultationReasonSpinner"
                    android:layout_width="305dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="18dp"
                    android:background="@drawable/box_rounded_bordered_white"
                    android:popupBackground="@drawable/box_rounded_bordered_white" />

                <Spinner
                    android:id="@+id/MentalDesiredOutcomeSpinner"
                    android:layout_width="354dp"
                    android:layout_height="39dp"
                    android:background="@drawable/box_rounded_bordered_white"
                    android:popupBackground="@drawable/box_rounded_bordered_white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TVconsultationReason"
                        android:layout_width="128dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_condensed_bold"
                        android:text="Preferred Consultation Type"
                        android:textColor="@color/white"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/TVconsultationOutcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_condensed_bold"
                        android:text="Urgency"
                        android:textColor="@color/white"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/RadioGroupPreferredConsultation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/darkBlue">

                        <RadioButton
                            android:id="@+id/buttonInPersonMental"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:fontFamily="@font/roboto"
                            android:text="In-Person"
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/buttonPhoneCallMental"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:fontFamily="@font/roboto"
                            android:text="Phone Call "
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/buttonVideoCallMental"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:fontFamily="@font/roboto"
                            android:text="Video Call"
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/buttonTextChatMental"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Text Chat"
                            android:textColor="@color/white" />
                    </RadioGroup>

                    <RadioGroup
                        android:id="@+id/RadioGroupUrgency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="125dp">

                        <RadioButton
                            android:id="@+id/buttonUrgentMental"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Urgent"
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/buttonNonUrgentMental"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Non-urgent"
                            android:textColor="@color/white" />

                    </RadioGroup>

                </LinearLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:text="Preferred Date and Time"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="227dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ETpreferredDateMental"
                        android:layout_width="143dp"
                        android:layout_height="39dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/box_rounded_bordered_white"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="text"
                        android:text="19/12/2024"
                        android:textAlignment="gravity" />

                    <TextView
                        android:id="@+id/ETpreferredTimeMental"
                        android:layout_width="148dp"
                        android:layout_height="39dp"
                        android:layout_weight="1"
                        android:background="@drawable/box_rounded_bordered_white"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="text"
                        android:text="17:00"
                        android:textAlignment="center" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:text="Describe More"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/editTextDescribeMental"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/box_rounded_bordered_white"
                    android:ems="10"
                    android:gravity="left"
                    android:inputType="text"
                    android:padding="10dp"
                    android:text="I've been working at my company for two years and recently found out that my male colleague is being paid more for the same role. I'm not sure if this qualifies as gender discrimination, and I want to know what my rights are regarding equal pay. How should I approach my employer about this, and what legal steps can I take if they donâ€™t respond?"
                    android:textAlignment="gravity"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:text="Add any attachments"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/addAttachmentButtonMental"
                    android:layout_width="73dp"
                    android:layout_height="68dp"
                    android:backgroundTint="#00FFFFFF"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_add_attachment" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonCancelRequestMental"
                        android:layout_width="10dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="130dp"
                        android:layout_weight="1"
                        android:text="Cancel Request" />

                    <Button
                        android:id="@+id/buttonSubmitMentalForm"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:backgroundTint="@color/blue"
                        android:text="SUBMIT" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </FrameLayout>

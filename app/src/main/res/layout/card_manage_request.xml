<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ManageRequestCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="20dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="32dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/requests"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_bold"
                android:maxLines="3"
                android:text="Clarifying Legal Rights"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/desiredOutcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="Information and Guidance"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_marginBottom="4dp"
                android:foregroundGravity="top"
                android:gravity="top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:foregroundGravity="top"
                    android:gravity="top"
                    android:text="Status:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/statusUpdate"
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:gravity="top"
                    android:text="Completed"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spinnerUpdates"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="110dp"
                    android:layout_weight="1"
                    android:background="@drawable/box_rounded_bordered_white" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
